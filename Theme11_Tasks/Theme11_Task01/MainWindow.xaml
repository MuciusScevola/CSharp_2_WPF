<Window x:Class="Theme11_Task01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Theme11_Task01"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="250">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <local:CircularProgressBar x:Name="ProgressBar"
                                   Value="{Binding ElementName=Slider, Path=Value}"
                                   Maximum="100"
                                   Height="100"
                                   Width="100"
                                   Margin="10"/>
        
        <Slider x:Name="Slider"
                Minimum="0"
                Maximum="100"
                Value="0"
                Width="200"
                Margin="10"/>

        <TextBlock Text="{Binding ElementName=ProgressBar, Path=Value, StringFormat={}Текущее значение: {0:F1}}"
                   HorizontalAlignment="Center"
                   Margin="10"/>
    </StackPanel>
</Window>