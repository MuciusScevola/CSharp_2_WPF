<Window x:Class="Theme07_Task01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Theme07_Task01"
        mc:Ignorable="d"
        Title="CustomCheckBoxes" Height="300" Width="450">
    <Window.Resources>
        <ControlTemplate x:Key="ThreeStateCheckBoxTemplate" TargetType="CheckBox">
            <Grid>
                <!-- Прямоугольник с закругленными углами -->
                <Rectangle x:Name="BackgroundRect"
                           Fill="LightGray"
                           Stroke="DarkGray"
                           RadiusX="3"
                           RadiusY="3"
                           Width="30"
                           Height="30"
                           HorizontalAlignment="Left" />

                <!-- Буква "X" для Checked состояния -->
                <TextBlock x:Name="CheckMark"
                           Text="X"
                           Foreground="Black"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="7,0,0,0"
                           Opacity="0" />

                <!-- Круг для Indeterminate состояния -->
                <Ellipse x:Name="IndeterminateMark"
                         Fill="Black"
                         Width="12"
                         Height="12"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         Margin="9,0,0,0"
                         Opacity="0" />

                <!-- Текстовая подпись -->
                <ContentPresenter Margin="40,0,0,0"
                                  VerticalAlignment="Center" />
            </Grid>

            <ControlTemplate.Triggers>
                <!-- Checked состояние -->
                <Trigger Property="IsChecked" Value="True">
                    <Setter TargetName="CheckMark" Property="Opacity" Value="1" />
                </Trigger>

                <!-- Indeterminate состояние -->
                <Trigger Property="IsChecked" Value="{x:Null}">
                    <Setter TargetName="IndeterminateMark" Property="Opacity" Value="1" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <StackPanel Margin="10" Orientation="Horizontal">
        <CheckBox Content="Unchecked State"
                  IsChecked="False" 
                  Template="{StaticResource ThreeStateCheckBoxTemplate}" 
                  Margin="0,10" />

        <CheckBox Content="Checked State" 
                  IsChecked="True" 
                  Template="{StaticResource ThreeStateCheckBoxTemplate}" 
                  Margin="0,10" />

        <CheckBox Content="Indeterminate State" 
                  IsChecked="{x:Null}" 
                  Template="{StaticResource ThreeStateCheckBoxTemplate}" 
                  Margin="0,10" />
    </StackPanel>
</Window>
