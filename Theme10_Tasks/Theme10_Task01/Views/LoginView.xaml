<Window x:Class="Theme10_Task01.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Theme10_Task01.Views"
        xmlns:conv="clr-namespace:Theme10_Task01.Converters"
        mc:Ignorable="d"
        Title="Система входа" Height="250" Width="300">
    <Window.Resources>
        <conv:BoolToBrushConverter x:Key="BrushConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Форма входа" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Логин:" Width="60" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Width="210" Margin="5,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Пароль:" Width="60" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         Width="210"
                         Margin="5,0,0,0"/>
            </StackPanel>

            <Button Content="Войти" 
                    Command="{Binding LoginCommand}" 
                    Margin="0,10,0,10"
                    Width="100"
                    HorizontalAlignment="Center"/>

            <Border BorderThickness="2" BorderBrush="Black" CornerRadius="5" Margin="0,10,0,0">
                <TextBlock Text="{Binding StatusMessage}"
                           Background="{Binding IsSuccess, Converter={StaticResource BrushConverter}}"
                           Foreground="White"
                           Padding="10"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Height="40"
                           FontWeight="Bold"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
