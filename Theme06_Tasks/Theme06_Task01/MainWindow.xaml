<Window x:Class="Theme06_Task01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Theme06_Task01"
        mc:Ignorable="d"
        Title="Длина текста" Height="240" Width="380">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <!--Не уверен был насчет длины самого текста, так что на всякий случай ограничил и его - 110 символами.-->
    <StackPanel Margin="10">
        <Grid>
            <TextBox x:Name="TextInput"
                     TextWrapping="NoWrap"
                     VerticalContentAlignment="Top"
                     HorizontalScrollBarVisibility="Visible"
                     VerticalScrollBarVisibility="Disabled"
                     Height="40"
                     FontSize="14"
                     Margin="0,0,0,1"
                     Padding="0,1,0,1"
                     BorderThickness="1"
                     MaxLength="110"/>
        </Grid>

        <CheckBox x:Name="DetailsCheckBox"
                  Content="Показать детали"
                  Margin="0,10,0,10"
                  IsChecked="False"/>

        <StackPanel Visibility="{Binding IsChecked, ElementName=DetailsCheckBox, Converter={StaticResource BoolToVis}}">
            <TextBlock Text="{Binding Text.Length, ElementName=TextInput, StringFormat='Длина текста: {0}'}"/>
            <ProgressBar Maximum="100"
                         Value="{Binding Text.Length, Mode=OneWay, ElementName=TextInput}"
                         Height="20"
                         Margin="0,5,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
