<Window x:Class="Theme01_Task03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Theme01_Task03"
        mc:Ignorable="d"
        Title="Убегающая кнопка" Height="390" Width="585">
    <Grid x:Name="CatchMeGrid">
        <Button x:Name="RunningButton"
                Content="Поймай меня!" 
                Width="100" 
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="5,5,0,0"
                MouseEnter="RunningButton_MouseEnter"/>
    </Grid>
</Window>
