<Window x:Class="Theme01_Task02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Theme01_Task02"
        mc:Ignorable="d"
        Title="Светофор" Height="445" Width="200">
    <Grid>
        <Ellipse x:Name="LightRed"
                 Height="100"
                 Width="100"
                 Stroke="Black"
                 Margin="0,15,0,0"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Fill="Gray"/>
        <Ellipse x:Name="LightYellow"
                 Height="100"
                 Width="100"
                 Stroke="Black"
                 Margin="0,-60,0,0"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Fill="Gray"/>
        <Ellipse x:Name="LightGreen"
                 Height="100"
                 Width="100"
                 Stroke="Black"
                 Margin="0,0,0,75"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Bottom"
                 Fill="Gray"/>

        <Button x:Name="NextLight"
                Content="Next"
                Height="30"
                Width="80"
                FontSize="13"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,20"
                Click="NextLight_Click"/>
    </Grid>
</Window>
