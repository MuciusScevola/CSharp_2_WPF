<Window x:Class="Theme01_Task01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Theme01_Task01"
        mc:Ignorable="d"
        Title="Счётчик кликов" Height="195" Width="295">
    <Grid>
        <TextBlock x:Name="CounterTextBlock"
                   Text="0"
                   FontSize="22"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" Margin="0,0,0,55"/>

        <Button x:Name="Clicker"
                Content="Кликни меня!"
                FontSize="12"
                Height="40"
                Width="120"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Click="ClickerButton_Click" Margin="0,0,0,30"
                />

    </Grid>
</Window>
