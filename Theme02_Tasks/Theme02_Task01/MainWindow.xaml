<Window x:Class="Theme02_Task01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Theme02_Task01"
        mc:Ignorable="d"
        Title="Текстовый редактор"
        Height="600" Width="800"
        MinHeight="300" MinWidth="400"
        Closing="Window_Closing">
    <!-- Решил вынести стили для кнопок и текстового поля, по аналогии с css -->
    <Window.Resources>
        <!-- Стиль для всех кнопок в окне -->
        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Padding" Value="5,5"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Black"/>
        </Style>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBlock" x:Key="TextBoxStyle">
            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

        
    <DockPanel LastChildFill="True">
        <!-- Панель инструментов-->
        <ToolBar DockPanel.Dock="Top" Background="White">
            <Button Content="Открыть"
                    Background="LightPink"
                    Style="{StaticResource ButtonStyle}"
                    Click="OpenButton_Click"/>
            <Button Content="Сохранить как"
                    Background="LightYellow"
                    />
            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Сохранить"
                                              Click="Сохранить"
                                              Background="LightYellow"
                                              Click="SaveAsButton_Click"/>
                        </ContextMenu/>
                        </Button.ContextMenu>
                    </Button>
                </StackPanel>
                <Separator/>
                <!-- Кнопка "О программе" справа -->
                <Button DockPanel.Dock="Right"
                Content="О программе"
                BorderThickness="1"
                BorderBrush="Black"
                Background="LightGreen"
                Margin="1"
                Padding="5,5"
                Click="AboutButton_Click"/>
            </DockPanel>
        </ToolBar>
        <!-- Область редактирования -->
        <TextBox x:Name="TextEditor"
                 Grid.Row="1"
                 FontFamily="Calibri"
                 FontSize="14"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 FontFamily="Calibri"
                 FontSize="14"
                 Margin="1"
                 Padding="5"
                 VerticalScrollBarVisibility="Visible"
                 HorizontalScrollBarVisibility="Disabled"/>
        <!-- Строка состояния -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText"
                           Text="Сохранено"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
