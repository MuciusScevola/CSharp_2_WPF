<Window x:Class="Theme02_Task01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Theme02_Task01"
        mc:Ignorable="d"
        Title="Текстовый редактор" Height="800" Width="600"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Панель инструментов-->
        <ToolBar Grid.Row="0">
            <Button Content="Открыть"
                    BorderThickness="1"
                    Click="OpenButton_Click"/>
            <Button Content="Сохранить как"
                    BorderThickness="1"
                    Click="SaveAsButton_Click"/>
            <Separator/>
            <Button Content="О программе"
                    Click="AboutButton_Click"/>
        </ToolBar>
        <!-- Область редактирования -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <TextBox x:Name="TextEditor"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     TextWrapping="NoWrap"
                     FontFamily="Calibri"
                     FontSize="14"/>
        </ScrollViewer>
        <!-- Строка состояния -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText">
                    Готов
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
