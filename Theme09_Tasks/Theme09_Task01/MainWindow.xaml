<Window x:Class="Theme09_Task01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Theme09_Task01"
        mc:Ignorable="d"
        Title="Color Viewer" Height="450" Width="800">

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:CustomCommands.ChangeColor}"
                        Executed="ChangeColorExecuted"/>
        <CommandBinding Command="ApplicationCommands.Undo"
                        Executed="UndoExecuted"
                        CanExecute="UndoCanExecute"/>
    </Window.CommandBindings>

    <!-- Сочетание клавиш, как я понял, можно не указывать: для ChangeColor уже определено в своем классе,
    а для Undo - по умолчанию отображается стандартное. -->
    <DockPanel x:Name="Dock">
        <Menu DockPanel.Dock="Top" Height="25">
            <MenuItem Header="Действия"
                      Margin="2"
                      Padding="2">
                <MenuItem Header="Изменить цвет"
                          Command="{x:Static local:CustomCommands.ChangeColor}"/>
                    <MenuItem Header="Отменить"
                              Command="ApplicationCommands.Undo"/>
            </MenuItem>
        </Menu>

        <StackPanel HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <Button Content="Изменить цвет"
                    Command="{x:Static local:CustomCommands.ChangeColor}"
                    Height="40"
                    Width="160"
                    Margin="5"/>
            <Button Content="Отменить"
                    Command="ApplicationCommands.Undo"
                    Height="40"
                    Width="160"
                    Margin="5"/>
        </StackPanel>
    </DockPanel>
</Window>
