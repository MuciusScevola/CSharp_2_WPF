<Window x:Class="Theme08_Task01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Theme08_Task01"
        mc:Ignorable="d"
        Title="Список товаров" Height="350" Width="300">
    <Window.Resources>
        <local:CategoryConverter x:Key="CategoryConverter"/>

        <DataTemplate x:Key="FoodTemplate">
            <Border BorderBrush="LightGreen" BorderThickness="2" CornerRadius="5" Margin="5" Padding="5">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding ImagePath}" Width="50" Height="50" Stretch="Uniform"/>
                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding Price, StringFormat={}{0:N2} ₽}" Margin="10,0,0,0" Foreground="Green"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="ApplianceTemplate">
            <Border BorderBrush="LightBlue" BorderThickness="2" CornerRadius="5" Margin="5" Padding="5">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding ImagePath}" Width="50" Height="50" Stretch="Uniform"/>
                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding Price, StringFormat={}{0:N2} ₽}" Margin="10,0,0,0" Foreground="Blue"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <Style TargetType="ListBoxItem">
            <Setter Property="ContentTemplate" Value="{StaticResource FoodTemplate}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Category}" Value="Appliance">
                    <Setter Property="ContentTemplate" Value="{StaticResource ApplianceTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <ListBox ItemsSource="{Binding Products}" HorizontalContentAlignment="Stretch"/>
    </Grid>
</Window>
